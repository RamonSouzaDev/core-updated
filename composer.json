{
    "name": "novosga/core",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": { "Novosga\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Novosga\\": "tests/" }
    },
    "require": {
        "php": ">=8.2",
        "doctrine/orm": "^3.2",
        "symfony/http-kernel": "7.1.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "~8.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
